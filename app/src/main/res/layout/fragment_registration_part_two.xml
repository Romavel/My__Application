<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registration.RegistrationPartTwoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Define your UI elements here, such as EditText, Button, etc. -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/custom_edittext">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rejestracja"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorRed"/>

                <!-- Imię -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextFirstName"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Imię"
                    android:drawableLeft="@drawable/ic_badge_24"
                    android:drawablePadding="8dp"
                    android:inputType="none"
                    android:textColor="@color/black"/>

                <!-- Nazwisko -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextLastName"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Nazwisko"
                    android:drawableLeft="@drawable/ic_badge_24"
                    android:drawablePadding="8dp"
                    android:inputType="none"
                    android:textColor="@color/black"/>

                <!-- Numer telefonu -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextPhoneNumber"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Numer telefonu"
                    android:drawableLeft="@drawable/ic_contact_phone_24"
                    android:drawablePadding="8dp"
                    android:inputType="phone"
                    android:textColor="@color/black"/>

                <!-- Data urodzenia -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editTextBirthDate"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Data Urodzenia"
                    android:drawableLeft="@drawable/ic_calendar_month_24"
                    android:drawablePadding="8dp"
                    android:inputType="date"
                    android:onClick="showDatePickerDialog"
                    android:textColor="@color/black"/>

                <!-- Kraj -->
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinnerCountry"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Kraj zamieszkania"
                    android:drawableLeft="@drawable/ic_baseline_flag_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>

                <!-- Płeć -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Płeć: "
                    android:layout_marginTop="20dp"

                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorRed"/>
                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mężczyzna" />

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kobieta" />
                </RadioGroup>

                <Button
                    android:id="@+id/buttonPrevoius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextConfirmPassword"
                    android:layout_toRightOf="@id/buttonPrevoius"
                    android:text="Zarejestruj" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>
