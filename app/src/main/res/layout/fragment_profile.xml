<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@android:color/transparent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Witaj username" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/text_welcome" />

            <TextView
                android:id="@+id/text_user_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Dane użytkownika"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/divider1" />



            <TextView
                android:id="@+id/text_registration_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Data rejestracji:"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/text_user_data" />

            <TextView
                android:id="@+id/text_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Imię i nazwisko:"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/text_registration_date" />

            <TextView
                android:id="@+id/text_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kraj:"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/text_full_name" />

            <TextView
                android:id="@+id/text_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Główne schorzenie:"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/text_country" />

            <TextView
                android:id="@+id/text_main_medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Główny lek:"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/text_condition" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/accessibility_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Ustawienia dostępności" />
                <TextView
                    android:id="@+id/notification_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Ustawienia powiadomień" />
                <TextView
                    android:id="@+id/therapeutic_range_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Ustaw przediał terapeutyczny" />
                <TextView
                    android:id="@+id/edit_personal_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Edytuj dane" />
                <TextView
                    android:id="@+id/edit_main_medication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Zmień lek główny" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/colorRed"
                android:text="Wyloguj się"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <!-- Dodaj inne widoki dla ProfileFragment według potrzeb -->
</FrameLayout>
