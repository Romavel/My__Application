<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="0dp"
    android:id="@+id/dialogPressure">

    <LinearLayout
        android:id="@+id/dialogBoxPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_popup">

        <TextView
            android:id="@+id/pressureTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_round"
            android:drawableLeft="@drawable/ic_account_circle_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:padding="10dp"
            android:text="Zmiana danych"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintTop_toTopOf="parent" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/descPressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:text="Zmień dane osobowe:"
                    android:textColor="@color/colorBlue"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="17sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nameBox"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorBlue"
                    android:hint="Imię"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/colorBlue"
                    android:textColorHint="@color/colorGray"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/surnameBox"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorBlue"
                    android:hint="Nazwisko"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/colorBlue"
                    android:textColorHint="@color/colorGray"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mainIllnessBox"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorBlue"
                    android:hint="Główna choroba"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/colorBlue"
                    android:textColorHint="@color/colorGray"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="290dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorBlue"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/gender_array"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/countriesSpinner"
                    android:layout_width="290dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorBlue"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/countries_array"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCancelPressure"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBlue"
                android:text="Anuluj"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/btnAddPressure"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBlue"
                android:text="Zmień"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>