<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    tools:context=".ui.diet.DietDialogFragment">
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal">
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
                      <Button
                          android:id="@+id/btnVegetables"
                          android:layout_width="120dp"
                          android:layout_height="90dp"
                          android:layout_margin="10dp"
                          android:layout_marginTop="20dp"
                          android:text="Warzywa zielone"
                          android:backgroundTint="@color/colorBlue"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintEnd_toStartOf="@id/btnAlcohol"/>

                      <Button
                          android:id="@+id/btnAlcohol"
                          android:layout_width="120dp"
                          android:layout_height="90dp"
                          android:layout_margin="10dp"
                          android:layout_marginTop="20dp"
                          android:text="Alkohol"
                          android:backgroundTint="@color/colorBlue"
                          app:layout_constraintStart_toEndOf="@id/btnVegetables"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintTop_toTopOf="parent"/>


                  </androidx.constraintlayout.widget.ConstraintLayout>
             </LinearLayout>

             <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal">

                     <androidx.constraintlayout.widget.ConstraintLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <Button
                             android:id="@+id/btnCaffeine"
                             android:layout_width="120dp"
                             android:layout_height="90dp"
                             android:layout_margin="10dp"
                             android:text="Kofeina"
                             android:backgroundTint="@color/colorBlue"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintTop_toTopOf="parent"
                             app:layout_constraintEnd_toStartOf="@id/btnNicotine"/>

                         <Button
                             android:id="@+id/btnNicotine"
                             android:layout_width="120dp"
                             android:layout_height="90dp"
                             android:layout_margin="10dp"
                             android:text="Nikotyna"
                             android:backgroundTint="@color/colorBlue"
                             app:layout_constraintStart_toEndOf="@id/btnCaffeine"
                             app:layout_constraintEnd_toEndOf="parent"
                             app:layout_constraintTop_toTopOf="parent"/>

                     </androidx.constraintlayout.widget.ConstraintLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="16dp"
                 android:orientation="horizontal">

                 <androidx.constraintlayout.widget.ConstraintLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <Button
                         android:id="@+id/btnOther"
                         android:layout_width="120dp"
                         android:layout_height="90dp"
                         android:layout_margin="10dp"
                         android:text="Inne"
                         android:visibility="invisible"
                         android:backgroundTint="@color/colorBlue"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toStartOf="@id/btnSugar"
                         app:layout_constraintTop_toTopOf="parent"/>

                     <Button
                         android:id="@+id/btnSugar"
                         android:layout_width="120dp"
                         android:layout_height="90dp"
                         android:layout_margin="10dp"
                         android:text="Cukier"
                         android:visibility="invisible"
                         android:backgroundTint="@color/colorBlue"
                         app:layout_constraintStart_toEndOf="@id/btnOther"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintTop_toTopOf="parent"/>



                 </androidx.constraintlayout.widget.ConstraintLayout>
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/container"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>
             <LinearLayout
                 android:id="@+id/container_vegetable"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>
             <LinearLayout
                 android:id="@+id/container_sugar"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>
             <LinearLayout
                 android:id="@+id/container_caffeine"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>
             <LinearLayout
                 android:id="@+id/container_nicotine"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>
             <LinearLayout
                 android:id="@+id/container_alcohol"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>
             <LinearLayout
                 android:id="@+id/container_other"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"/>

             <androidx.constraintlayout.widget.ConstraintLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <Button
                     android:id="@+id/btnCancelDiet"
                     android:layout_width="160dp"
                     android:layout_height="60dp"
                     android:layout_marginTop="10dp"
                     android:layout_marginBottom="8dp"
                     android:backgroundTint="@color/colorBlue"
                     android:text="Anuluj"
                     android:textSize="14sp"
                     app:cornerRadius="20dp"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/btnAddDiet"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>

                 <Button
                     android:id="@+id/btnAddDiet"
                     android:layout_width="160dp"
                     android:layout_height="60dp"
                     android:layout_marginTop="10dp"
                     android:layout_marginBottom="8dp"
                     android:backgroundTint="@color/colorBlue"
                     android:text="Ustaw"
                     android:textSize="14sp"
                     app:cornerRadius="20dp"
                     app:layout_constraintStart_toEndOf="@id/btnCancelDiet"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
             </androidx.constraintlayout.widget.ConstraintLayout>

             </LinearLayout>
     </FrameLayout>
 </ScrollView>