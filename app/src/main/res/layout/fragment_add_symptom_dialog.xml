<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    tools:context=".ui.medications.AddSymptomDialogFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnHeadache"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Ból głowy"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnBleeding"/>

                    <Button
                        android:id="@+id/btnBleeding"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Krwawienie z nieznanej przyczyny"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toEndOf="@id/btnHeadache"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnBruises"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Siniaki z nieznanej przyczyny"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnChestPain"/>

                    <Button
                        android:id="@+id/btnChestPain"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Ból w klatce piersiowej"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toEndOf="@id/btnBruises"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnLegSwelling"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Opuchlizna nóg"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnPalpitations"/>

                    <Button
                        android:id="@+id/btnPalpitations"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Kołatanie serca"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toEndOf="@id/btnLegSwelling"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnDizzyness"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Zawroty głowy"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnHotFlush"/>

                    <Button
                        android:id="@+id/btnHotFlush"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Uderzenie gorąca"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toEndOf="@id/btnDizzyness"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnCoughing"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Kaszel"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnOther"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <Button
                        android:id="@+id/btnOther"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:text="Inne"
                        android:visibility="invisible"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintStart_toEndOf="@id/btnCoughing"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnCancelSymptom"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/colorBlue"
                    android:text="Anuluj"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnAddSymptom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                    android:id="@+id/btnAddSymptom"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/colorBlue"
                    android:text="Dodaj"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:layout_constraintStart_toEndOf="@id/btnCancelSymptom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </FrameLayout>
</ScrollView>